%%%%\frame{
%%%%\frametitle{Valuing outcomes: utility scores}
%%%%\begin{itemize}
%%%%\item \textbf{Time-Trade Off}
%%%%\begin{itemize}
%%%%\item Trades \textit{\color{red}quality} for \textit{\color{blue}quantity} of life: imperfect health for longer or perfect health for fewer years?
%%%%\item Number of years in full health varied until respondents are indifferent between the two options
%%%%\item Can lead to negative utilities (states ``worse than death'')
%%%%\end{itemize}
%%%%\pause\vspace{5pt}
%%%%\item \textbf{Standard Gamble}
%%%%\begin{itemize}
%%%%\item Purely decision-theoretic tool (\textbf{more on this later!})
%%%%\item Identifies the ``best'' and ``worst'' possible outcomes \& assign utilities of 1 and 0, respectively
%%%%\item Then, compares any other outcome to a combination of these two and derive utilities by conditions of (perceived) indifference
%%%%\end{itemize}
%%%%\pause\vspace{5pt}
%%%%\item \textbf{Discrete choice experiments} (Conjoint analysis) 
%%%%\begin{itemize}
%%%%\item Constructs a set of alternatives based on a limited number of ``important'' attributes with different ``levels''
%%%%\item Respondents indicate a preference to infer the relative weight of each level of each attribute
%%%%\item Goes ``beyond health outcomes'' \& limits psychological bias
%%%%\end{itemize}
%%%%\end{itemize}
%%%%}
%%%%
%%%%%%%\frame{
%%%%%%%\frametitle{Valuing outcomes: utility scores}
%%%%%%%\textbf{Time-Trade Off} (TTO) \vspace{-5pt}
%%%%%%%\begin{itemize}
%%%%%%%\item Trade \textit{\color{red}quality} for \textit{\color{blue}quantity} of life: imperfect health for longer or perfect health for fewer years?
%%%%%%%\item Number of years in full health varied until respondents are indifferent between the two options
%%%%%%%\item Can lead to negative utilities (states ``worse than death'')
%%%%%%%\end{itemize}
%%%%%%%\vspace{5pt}\pause
%%%%%%%\textbf{Standard Gamble} (SG)\vspace{-5pt}
%%%%%%%\begin{itemize}
%%%%%%%\item Purely decision-theoretic tool. Identify ``best'' ($y^{\rm{max}}$) and ``worst'' ($y^{\rm{min}}$) outcomes and set $u(y^{\rm{max}})=1$ and $u(y^{\rm{min}})=0$
%%%%%%%\item For any state $y\neq y^{\rm{min}},y^{\rm{max}}$ consider the gamble
%%%%%%%\begin{itemize}
%%%%%%%\item[1.] obtain $y$ with probability 1
%%%%%%%\item[2.] obtain $y^{\rm{max}}$ with probability $\pi$ and $y^{\rm{min}}$ with probability $(1-\pi)$
%%%%%%%\end{itemize}
%%%%%%%\item Assign $y$ utility score $u(y)=\pi$ for $\pi$ making 1.\ and 2.\ \alert{indifferent}
%%%%%%%\end{itemize}
%%%%%%%}
%%%%%%%
%%%%%%%\frame{
%%%%%%%\frametitle{Valuing outcomes: utility scores}
%%%%%%%\textbf{Discrete choice experiments} (Conjoint analysis) \vspace{-5pt}
%%%%%%%\begin{itemize}
%%%%%%%\item The analyst constructs a set of alternatives based on a limited number of ``important'' attributes
%%%%%%%\item Respondents indicate a preference over those alternatives
%%%%%%%\begin{itemize}
%%%%%%%\item Presenting two or more alternatives for comparison
%%%%%%%\end{itemize}
%%%%%%%\item Repeated measurements over alternatives with different levels of attributes
%%%%%%%\begin{itemize}
%%%%%%%\item \textbf{Objective}: Infer the relative weights of each level of each attribute
%%%%%%%\end{itemize}
%%%%%%%\vspace{10pt}
%%%%%%%\item Goes ``beyond health outcomes''
%%%%%%%\begin{itemize}
%%%%%%%\item Many attributes enter the underlying valuation process
%%%%%%%\item Can consider a broader range of ``benefits''
%%%%%%%\item Avoids (limits) ``psychological bias''
%%%%%%%\end{itemize}
%%%%%%%\end{itemize}
%%%%%%%}
%%%%
