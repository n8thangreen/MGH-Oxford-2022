%%%\begin{center}
%%%\includegraphics[scale=1]{1.introduction-to-health-economic-evaluations/figs/Individual_level}
%%%\end{center}
%%%\pause\vspace{-5pt}
%%%For instance (\textbf{more on this later!}), can model \vspace{-5pt}
%%%\begin{itemize}
%%%\item \only<2|handout:2>{$c_{it} \sim \mbox{Gamma}(\eta_t,\lambda_t)$ [rate \& shape] $\Rightarrow \mu_{ct}=\eta_t/\lambda_t$} \only<3-|handout:3->{\gray $c_{it} \sim \mbox{Gamma}(\eta_t,\lambda_t)$ [rate \& shape] $\Rightarrow \mu_{ct}=\eta_t/\lambda_t$}
%%%\item[] \only<2|handout:2>{\gray $c_{it} \sim \mbox{logNormal}(\eta_t,\lambda_t)$ [log mean \& log sd] $\Rightarrow \mu_{ct}=\mbox{exp}\left(\eta_t+\lambda^2_t/2\right)$} \only<3|handout:3>{\black $c_{it} \sim \mbox{logNormal}(\eta_t,\lambda_t)$ [log mean \& log sd] $\Rightarrow \mu_{ct}=\mbox{exp}\left(\eta_t+\lambda^2_t/2\right)$} \only<4|handout:4>{\gray $c_{it} \sim \mbox{logNormal}(\eta_t,\lambda_t)$ [log mean \& log sd] $\Rightarrow \mu_{ct}=\mbox{exp}\left(\eta_t+\lambda^2_t/2\right)$}
%%%\only<2-3|handout:2-3>{\item[] \white $\mbox{E}[e_{it}]=\phi_{it}$; $g(\phi_{it}) = \xi_t+\gamma_t(c_{it}-\mu_{ct}) \Rightarrow \mu_{et}=g^{-1}(\xi_t)$}
%%%\only<4|handout:4>{\item \black $\mbox{E}[e_{it}]=\phi_{it}$; $g(\phi_{it}) = \xi_t+\gamma_t(c_{it}-\mu_{ct}) \Rightarrow \mu_{et}=g^{-1}(\xi_t)$}
%%%\end{itemize}
%%%}
